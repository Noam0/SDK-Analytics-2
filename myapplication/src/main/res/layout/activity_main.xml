<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_crash_nullpointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NullPointerException"
        android:onClick="testNullPointerException"/>

    <Button
        android:id="@+id/btn_crash_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IndexOutOfBoundsException"
        android:onClick="testIndexOutOfBoundsException"/>

    <Button
        android:id="@+id/btn_crash_illegal_arg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IllegalArgumentException"
        android:onClick="testIllegalArgumentException"/>

    <Button
        android:id="@+id/btn_crash_stackoverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StackOverflowError"
        android:onClick="testStackOverflowError"/>

    <Button
        android:id="@+id/btn_crash_outofmemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OutOfMemoryError"
        android:onClick="testOutOfMemoryError"/>

    <Button
        android:id="@+id/btn_crash_arithmetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArithmeticException"
        android:onClick="testArithmeticException"/>

    <Button
        android:id="@+id/btn_crash_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SecurityException"
        android:onClick="testSecurityException"/>

</LinearLayout>